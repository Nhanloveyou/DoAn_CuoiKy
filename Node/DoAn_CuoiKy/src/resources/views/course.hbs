{{!-- <input type="text" name="name" value="{{ searchOptions.name }}"> --}}
    <h2 class="hq">Level Normal</h2>
    <div class="row">
    {{#each courses}}
    {{#if_eq this.level 'normal'}}
        <div class="row-sm-1 col-lg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Miễn phí</a>
                </div>
            </div>
        </div>
    {{/if_eq}}
    {{/each}}   
    </div>
    <h2 class="hq">Level advance</h2>
    <div class="row">
    {{#each courses}}
    {{#if_eq this.level 'advance'}}
        <div class="row-sm-1 col-lg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Miễn phí</a>
                </div>
            </div>
        </div>
    {{/if_eq}}
    {{/each}}   
    </div>
</div>